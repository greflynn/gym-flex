% title 'Forgot Password';

%= form_for 'send_temporary_password' => (method => 'POST') => begin
  <br><br>
  %= label_for 'email' => 'Email'
  %= email_field 'email', class => 'form-control'

  <br><br>

  <div class="row" align="center">
    %= submit_button 'Submit', class => 'btn btn-success'
  </div>

%end
